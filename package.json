{
  "name": "@barusu/root",
  "version": "0.0.0",
  "author": {
    "name": "lemon-clown",
    "url": "https://github.com/lemon-clown/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lemon-clown/barusu.git"
  },
  "homepage": "https://github.com/lemon-clown/barusu/#readme",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">= 12.16.0"
  },
  "scripts": {
    "pre:publish": "yarn find-inconsistent && yarn sort-imports",
    ":publish": "lerna publish",
    "new:ts-package": "node ./node_modules/@barusu/template-ts-package/cli.js",
    "bootstrap": "lerna bootstrap",
    "build": "lerna exec --concurrency 1 -- 'echo && pwd && yarn build'",
    "lint:fix": "lerna exec --concurrency 1 -- 'echo && pwd && yarn lint:fix'",
    "clean": "lerna clean --yes && yarn install",
    "rebuild": "lerna exec -- yarn build",
    "find-inconsistent": "node ./node_modules/@barusu/tool-find-inconsistent-packages/lib/cjs/cli.js --log-level=verbose",
    "sort-imports": "node ./node_modules/@barusu/tool-sort-imports/lib/cjs/cli.js . --log-level=verbose"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "cross-env": "^7.0.2",
    "lerna": "^3.20.2",
    "rimraf": "^3.0.2",
    "ts-node": "^8.8.2",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.8.2"
  },
  "@barusu/tool-sort-imports": {
    "pattern": [
      "packages/**/src/**/*.{ts,tsx}",
      "packages/**/test/**/*.{ts,tsx}"
    ],
    "topModule": [
      "react",
      "vue",
      "fs",
      "fs-extra",
      "path",
      "glob"
    ],
    "indent": "  ",
    "quote": "'",
    "maxColumn": 100
  }
}
