{
  "name": "@barusu/root",
  "version": "0.0.0",
  "author": {
    "name": "lemon-clown",
    "url": "https://github.com/lemon-clown/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lemon-clown/barusu.git"
  },
  "homepage": "https://github.com/lemon-clown/barusu/#readme",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">= 12.16.0"
  },
  "scripts": {
    "pre:publish": "yarn find-inconsistent && yarn sort-imports",
    ":publish": "lerna publish --no-private",
    "new:ts-package": "node ./node_modules/@barusu/template-ts-package/cli.js",
    "bootstrap": "lerna bootstrap",
    "build": "lerna exec --concurrency 1 -- 'echo && pwd && yarn build'",
    "lint:fix": "lerna exec --concurrency 1 -- 'echo && pwd && yarn lint:fix'",
    "clean": "lerna clean --yes && yarn install",
    "rebuild": "yarn clean && yarn build",
    "exec:ts": "node -r ts-node/register -r tsconfig-path/register",
    "find-inconsistent": "node ./node_modules/@barusu/tool-find-inconsistent/lib/cjs/cli.js . --log-level=verbose",
    "sort-imports": "node ./node_modules/@barusu/tool-sort-imports/lib/cjs/cli.js . --log-level=verbose"
  },
  "workspaces": [
    "packages/*",
    "scaffolds/*",
    "templates/*",
    "tools/*",
    "utils/*"
  ],
  "devDependencies": {
    "@types/chai": "^4.2.11",
    "@types/jest": "^26.0.10",
    "chai": "^4.2.0",
    "chai-exclude": "^2.0.2",
    "cross-env": "^7.0.2",
    "lerna": "^3.22.1",
    "jest": "^26.4.1",
    "mocha": "^8.1.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.2.0",
    "ts-node": "^8.8.2",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.8.2"
  },
  "@barusu/tool-sort-imports": {
    "pattern": [
      "{packages,scaffolds,templates,tools,utils}/*/src/**/*.{ts,tsx}",
      "{packages,scaffolds,templates,tools,utils}/*/test/**/*.{ts,tsx}"
    ],
    "moduleRanks": [
      {
        "regex": "^(react|vue|angular)(?:[/\\-][\\w\\-./]*)?$",
        "rank": 1.1
      },
      {
        "regex": "^mocha|chai(?:[/][\\w\\-./]*)?$",
        "rank": 1.2
      },
      {
        "regex": "^[a-zA-Z\\d][\\w\\-.]*",
        "rank": 1.3
      },
      {
        "regex": "^@[a-zA-Z\\d][\\w\\-.]*\\/[a-zA-Z\\d][\\w\\-.]*",
        "rank": 1.4
      },
      {
        "regex": "^@\\/",
        "rank": 2.1
      },
      {
        "regex": "^(?:\\/|[a-zA-Z]:)",
        "rank": 3.1
      },
      {
        "regex": "^[.]{2}[\\/\\\\][^\\n]*",
        "rank": 3.2
      },
      {
        "regex": "^[.][\\/\\\\][^\\n]*",
        "rank": 3.3
      }
    ],
    "indent": "  ",
    "quote": "'",
    "semicolon": false,
    "maxColumn": 80
  }
}
