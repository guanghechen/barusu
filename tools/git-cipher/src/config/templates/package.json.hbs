{
  "name": "private-repository-demo",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "encrypt": "barusu-git-cipher encrypt .",
    "decrypt": "barusu-git-cipher decrypt ."
  },
  "devDependencies": {
    "@barusu/tool-git-cipher": "^{{{lowerCase templateVersion}}}"
  },
  "@barusu/tool-git-cipher": {
    "__globalOptions__": {
      "encoding": "{{{encoding}}}",
      "secretFilepath": "{{{secretFilepath}}}",
      "secretFileEncoding": "{{{secretFileEncoding}}}",
      "indexFilepath": "{{{indexFilepath}}}",
      "indexFileEncoding": "{{{indexFileEncoding}}}",
      "ciphertextRootDir": "{{{ciphertextRootDir}}}",
      "plaintextRootDir": "{{{plaintextRootDir}}}",
      "showAsterisk": {{{showAsterisk}}}
    },
    "encrypt": {
      "updateBeforeEncrypt": true
    },
    "decrypt": {
      "outDir": "{{{plaintextRootDir}}}-bak"
    }
  }
}
