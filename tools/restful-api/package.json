{
  "name": "@barusu/tool-restful-api",
  "version": "0.0.28",
  "description": "quickly create restful style mock server.",
  "author": {
    "name": "lemon-clown",
    "url": "https://github.com/lemon-clown/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lemon-clown/barusu.git"
  },
  "homepage": "https://github.com/lemon-clown/barusu/tree/master/tools/restful-api#readme",
  "main": "lib/cjs/index.js",
  "types": "lib/types/index.d.ts",
  "source": "src/index.ts",
  "license": "MIT",
  "engines": {
    "node": ">= 12.16.0"
  },
  "keywords": [
    "restful mock server",
    "typescript/json-schema to mock server"
  ],
  "files": [
    "lib/",
    "CHANGELOG.md",
    "LICENSE",
    "README.md",
    "package.json",
    "!lib/**/*.js.map",
    "!lib/**/*.d.ts.map"
  ],
  "bin": {
    "barusu-rapit": "./lib/cjs/cli.js"
  },
  "scripts": {
    "prebuild": "yarn test && rimraf lib/",
    "build": "rollup -c rollup.config.js",
    "test": "TS_NODE_FILES=true jest --config ../../jest.config.json --rootDir .",
    "prepublishOnly": "cross-env ROLLUP_USE_SOURCE_MAP=false yarn build",
    "lint:fix": "eslint src/**/*.ts --fix",
    "generate:schema": "TS_NODE_FILES=true cross-env node -r ts-node/register script/generate.schema.ts",
    "generate:raw-schema": "TS_NODE_FILES=true cross-env node -r ts-node/register script/generate.raw-schema.ts"
  },
  "dependencies": {
    "@barusu/chalk-logger": "^0.0.28",
    "@barusu/configuration-master": "^0.0.28",
    "@barusu/event-bus": "^0.0.28",
    "@barusu/typescript-json-schema": "^0.0.28",
    "@barusu/util-cli": "^0.0.28",
    "@barusu/util-option": "^0.0.28",
    "@koa/cors": "^3.1.0",
    "@koa/router": "^9.3.1",
    "@types/fs-extra": "^8.1.0",
    "@types/inquirer": "^6.5.0",
    "@types/js-yaml": "^3.12.5",
    "@types/json-schema-faker": "^0.5.0",
    "@types/koa": "^2.11.1",
    "@types/koa-json": "^2.0.18",
    "@types/koa-send": "^4.1.2",
    "@types/koa__cors": "^3.0.1",
    "@types/koa__router": "^8.0.2",
    "@types/mockjs": "^1.0.2",
    "execa": "^4.0.3",
    "fs-extra": "^8.1.0",
    "globby": "^11.0.0",
    "inquirer": "^7.3.0",
    "js-yaml": "^3.14.0",
    "json-schema-faker": "^0.5.0-rcv.24",
    "koa": "^2.13.0",
    "koa-json": "^2.0.2",
    "koa-send": "^5.0.1",
    "mockjs": "^1.1.0",
    "typescript": "^3.8.2"
  },
  "devDependencies": {
    "@barusu/eslint-config": "^0.0.28",
    "@barusu/rollup-config": "^0.0.28",
    "@barusu/rollup-plugin-copy": "^0.0.28",
    "rollup": "2.16.1"
  }
}
