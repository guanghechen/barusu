{
  "extends": "./tsconfig.settings.json",
  "compilerOptions": {
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@barusu/redux-actions": ["./packages/redux-actions/src"],
      "@barusu/typescript-json-schema": [
        "./packages/typescript-json-schema/src"
      ],
      "@barusu/webpack-source-map-loader": [
        "./scaffolds/webpack-source-map-loader/src"
      ],
      "jest.setup": ["jest.setup.ts"]
    }
  },
  "exclude": [
    "**/__tmp__/**",
    "**/build/**",
    "**/coverage/**",
    "**/demo/**",
    "**/dist/**",
    "**/doc/**",
    "**/example/**",
    "**/lib/**",
    "**/node_modules/**",
    "**/target/**",
    "**/release/**",
    "**/vendor/**",
    "**/*.styl.d.ts",
    "*.tsbuildinfo",
    "**/__test__/cases/**",
    "**/typescript-json-schema/test/programs/**"
  ]
}
