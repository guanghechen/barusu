{
  "extends": "./tsconfig.settings.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@barusu/chalk-logger": ["./packages/chalk-logger/src"],
      "@barusu/commander": ["./packages/commander/src"],
      "@barusu/configuration-master": ["./packages/configuration-master/src"],
      "@barusu/event-bus": ["./packages/event-bus/src"],
      "@barusu/redux-actions": ["./packages/redux-actions/src"],
      "@barusu/typescript-json-schema": [
        "./packages/typescript-json-schema/src"
      ],
      "@barusu/webpack-source-map-loader": [
        "./scaffolds/webpack-source-map-loader/src"
      ],
      "@barusu/util-blob": ["./utils/blob/src"],
      "@barusu/util-cli": ["./utils/cli/src"],
      "@barusu/util-jest": ["./utils/jest/src"],
      "@barusu/util-mocha": ["./utils/mocha/src"]
    }
  },
  "exclude": [
    "**/__tmp__/**",
    "**/build/**",
    "**/coverage/**",
    "**/demo/**",
    "**/dist/**",
    "**/doc/**",
    "**/example/**",
    "**/lib/**",
    "**/node_modules/**",
    "**/target/**",
    "**/release/**",
    "**/vendor/**",
    "**/*.styl.d.ts",
    "*.tsbuildinfo",
    "**/__test__/cases/**",
    "**/typescript-json-schema/test/programs/**"
  ]
}
