{
  "extends": "./tsconfig.settings.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "tsconfig": [
        "./node_modules/tsconfig"
      ],
      "@barusu/chalk-logger": [
        "./packages/chalk-logger/src"
      ],
      "@barusu/commander": [
        "./packages/commander/src"
      ],
      "@barusu/configuration-master": [
        "./packages/configuration-master/src"
      ],
      "@barusu/event-bus": [
        "./packages/event-bus/src"
      ],
      "@barusu/redux-actions": [
        "./packages/redux-actions/src"
      ],
      "@barusu/typescript-json-schema": [
        "./packages/typescript-json-schema/src"
      ],
      "@barusu/rollup-config": [
        "./scaffolds/rollup-config/src"
      ],
      "@barusu/webpack-source-map-loader": [
        "./scaffolds/webpack-source-map-loader/src"
      ],
      "@barusu/rollup-plugin-copy": [
        "./scaffolds/rollup-plugin-copy/src"
      ],
      "@barusu/tool-find-inconsistent": [
        "./tools/find-inconsistent/src"
      ],
      "@barusu/tool-git-cipher": [
        "./tools/git-cipher/src"
      ],
      "@barusu/tool-sort-imports": [
        "./tools/sort-imports/src"
      ],
      "@barusu/tool-tsconfig-paths": [
        "./tools/tsconfig-paths/src"
      ],
      "@barusu/tool-word": [
        "./tools/word/src"
      ],
      "@barusu/util-blob": [
        "./utils/blob/src"
      ],
      "@barusu/util-cli": [
        "./utils/cli/src"
      ],
      "@barusu/util-jest": [
        "./utils/jest/src"
      ],
      "@barusu/util-mocha": [
        "./utils/mocha/src"
      ],
      "@barusu/util-option": [
        "./utils/option/src"
      ]
    }
  },
  "exclude": [
    "**/test/cases/**",
    "**/__test__/cases/**",
    "**/node_modules/**",
    "**/lib/**",
    "**/dist/**",
    "**/build/**",
    "**/target/**",
    "**/vendor/**",
    "**/release/**",
    "**/example/**",
    "**/demo/**",
    "**/doc/**",
    "**/tmp/**",
    "**/__tmp__/**",
    "**/script/**",
    "**/coverage/**",
    "**/*.styl.d.ts",
    "*.tsbuildinfo",
    "rollup.config.js",
    ".eslintrc.js"
  ]
}
