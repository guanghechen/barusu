{
  "verbose": true,
  "transform": {
    "^.+\\.tsx?$": "ts-jest"
  },
  "testRegex": "/(__test__|test)/[^/]+\\.spec\\.tsx?$",
  "testPathIgnorePatterns": [
    "/node_modules/",
    "/build/",
    "/coverage/"
  ],
  "moduleFileExtensions": [
    "ts",
    "tsx",
    "js",
    "jsx",
    "json",
    "node"
  ],
  "collectCoverage": true,
  "collectCoverageFrom": [
    "**/*.{ts,tsx}",
    "!**/node_modules/**",
    "!**/build/**",
    "!**/lib/**",
    "!**/coverage/**"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 20,
      "functions": 20,
      "lines": 20,
      "statements": 20
    }
  },
  "coverageReporters": [
    "text",
    "text-summary"
  ]
}
