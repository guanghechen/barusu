{
  "name": "@barusu/typescript-json-schema",
  "version": "0.42.4",
  "description": "typescript-json-schema generates JSON Schema files from you Typescript sources",
  "author": {
    "name": "lemon-clown",
    "url": "https://github.com/lemon-clown/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lemon-clown/barusu.git"
  },
  "homepage": "https://github.com/lemon-clown/barusu/tree/master/packages/typescript-json-schema#readme",
  "main": "lib/cjs/index.js",
  "module": "lib/esm/index.js",
  "types": "lib/types/index.d.ts",
  "source": "src/index.ts",
  "license": "BSD-3-Clause",
  "engines": {
    "node": ">= 12.16.0"
  },
  "files": [
    "lib/",
    ".eslintrc.js",
    "CHANGELOG.md",
    "LICENSE",
    "README.md",
    "package.json",
    "!lib/**/*.js.map",
    "!lib/**/*.d.ts.map"
  ],
  "scripts": {
    "start": "rollup -w -c rollup.config.js",
    "prebuild": "rimraf lib/",
    "build": "rollup -c rollup.config.js",
    "lint:fix": "eslint 'src/**/*.{ts,tsx}' --fix",
    "prepublishOnly": "cross-env ROLLUP_USE_SOURCE_MAP=false yarn build",
    "test": "TS_NODE_PROJECT='./tsconfig.test.json'  mocha -t 5000 -r ts-node/register test/**.test.ts"
  },
  "dependencies": {
    "@types/glob": "^7.1.1",
    "@types/json-schema": "^7.0.3",
    "@types/json-stable-stringify": "^1.0.32",
    "@types/node": "^12.7.3",
    "glob": "^7.1.4",
    "json-stable-stringify": "^1.0.1",
    "typescript": "^3.6.4"
  },
  "devDependencies": {
    "@barusu/eslint-config": "^0.0.17",
    "@barusu/rollup-config": "^0.0.17",
    "@types/chai": "^4.2.1",
    "@types/mocha": "^5.2.7",
    "ajv": "^6.10.2",
    "chai": "^4.2.0",
    "mocha": "^6.2.0",
    "nodemon": "^1.19.1",
    "rollup": "2.16.1"
  }
}
