{
  "name": "@barusu/typescript-json-schema",
  "version": "0.0.25",
  "description": "typescript-json-schema generates JSON Schema files from you Typescript sources",
  "author": {
    "name": "lemon-clown",
    "url": "https://github.com/lemon-clown/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lemon-clown/barusu.git"
  },
  "homepage": "https://github.com/lemon-clown/barusu/tree/master/packages/typescript-json-schema#readme",
  "main": "lib/cjs/index.js",
  "module": "lib/esm/index.js",
  "types": "lib/types/index.d.ts",
  "source": "src/index.ts",
  "license": "BSD-3-Clause",
  "engines": {
    "node": ">= 12.16.0"
  },
  "files": [
    "lib/",
    "CHANGELOG.md",
    "LICENSE",
    "README.md",
    "package.json",
    "!lib/**/*.js.map",
    "!lib/**/*.d.ts.map"
  ],
  "scripts": {
    "start": "rollup -w -c rollup.config.js",
    "prebuild": "yarn test && rimraf lib/",
    "build": "rollup -c rollup.config.js",
    "test": "TS_NODE_PROJECT='./tsconfig.test.json' TS_NODE_FILES=true mocha -t 60000 -r ts-node/register test/**.test.ts",
    "prepublishOnly": "cross-env ROLLUP_USE_SOURCE_MAP=false yarn build",
    "lint:fix": "eslint 'src/**/*.{ts,tsx}' --fix"
  },
  "dependencies": {
    "@types/json-schema": "^7.0.5",
    "@types/json-stable-stringify": "^1.0.32",
    "json-stable-stringify": "^1.0.1",
    "typescript": "^3.8.2"
  },
  "devDependencies": {
    "@barusu/eslint-config": "^0.0.25",
    "@barusu/rollup-config": "^0.0.25",
    "ajv": "^6.12.2",
    "rollup": "2.16.1"
  }
}
