{
  "type": "combine",
  "strategy": "all",
  "allOf": [
    {
      "type": "object",
      "allowAdditionalProperties": true,
      "properties": {
        "name": {
          "type": "string",
          "required": true
        }
      }
    },
    {
      "type": "object",
      "allowAdditionalProperties": true,
      "properties": {
        "age": {
          "type": "integer",
          "minimum": 1,
          "required": true
        }
      }
    }
  ],
  "anyOf": [
    {
      "type": "object",
      "allowAdditionalProperties": true,
      "silentIgnore": true,
      "propertyNames": {
        "type": "string",
        "pattern": "^(name|age)$"
      },
      "properties": {
        "gender": {
          "type": "string",
          "enum": [ "male", "female" ],
          "required": true
        }
      }
    },
    {
      "type": "object",
      "allowAdditionalProperties": true,
      "silentIgnore": true,
      "propertyNames": {
        "type": "string",
        "pattern": "^(name|age)$"
      },
      "properties": {
        "sex": {
          "type": "string",
          "enum": [ "male", "female" ],
          "required": true
        }
      }
    }
  ]
}
